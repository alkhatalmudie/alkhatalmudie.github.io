rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // =========================================================
    // 0. ALPHA COMMANDER GOD-MODE
    // =========================================================
    match /{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == 'EOQEt04azKTTWcmNXVtpgSVsRxt2';
    }

    // =========================================================
    // 1. PUBLIC UPLOADS 
    // =========================================================
    match /client_uploads/{allPaths=**} {
      allow write: if true; 
    }

    // =========================================================
    // 1.5 HR CV UPLOADS (NEW)
    // =========================================================
    match /CVs/{allPaths=**} {
      allow write: if true; 
    }

    // =========================================================
    // 2. COMPLETED TRANSLATIONS 
    // =========================================================
    match /completed_translations/{allPaths=**} {
      allow read: if true; 
    }

    // =========================================================
    // 3. EMPLOYEE REGISTRY & AVATARS
    // =========================================================
    match /employee_data/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == 'EOQEt04azKTTWcmNXVtpgSVsRxt2';
    }
    
    // =========================================================
    // 4. EMPLOYEE FILE DROP ZONE
    // =========================================================
    match /employee_uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}