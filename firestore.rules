rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      allow create: if true;
      // Admin sees all OR User sees their own data
      allow read: if request.auth != null && (request.auth.uid == 'EOQEt04azKTTWcmNXVtpgSVsRxt2' || request.auth.uid == resource.data.userId);
      allow delete: if request.auth != null && request.auth.uid == 'EOQEt04azKTTWcmNXVtpgSVsRxt2';
    }
  }
}