rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================
    // 1. ALPHA COMMANDER GOD-MODE 
    // This instantly fixes the dashboard by granting MH Studios 
    // master access to ALL collections, bypassing all other rules.
    // =========================================================
    match /{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == 'EOQEt04azKTTWcmNXVtpgSVsRxt2';
    }

    // =========================================================
    // 2. CLIENT & USER RULES (Standard access)
    // =========================================================
    match /orders/{orderId} {
      allow create: if true;
      // Clients can only read their own specific orders
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    match /users/{userId} {
      allow create: if request.auth != null;
      // Clients can only read/edit their own profile
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // =========================================================
    // 3. PUBLIC HOMEPAGE PROMOTIONS
    // =========================================================
    match /promotions/{promoId} {
      allow read: if true; 
      
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null; // Any logged-in user can comment
      }
    }

    // =========================================================
    // 4. EMPLOYEE LOGISTICS & COMMS
    // =========================================================
    match /employees/{empId} {
      // Operatives only see their own personnel file
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    match /employee_logs/{logId} {
      allow create: if request.auth != null; 
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    match /messages/{msgId} {
      // Operatives can only access messages tied to their specific UID
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.empUid || request.auth.uid == request.resource.data.empUid);
    }

    match /admin_inbox/{inboxId} {
      // Anyone can drop a message to the admin
      allow create: if request.auth != null;
    }
    
  }
}