rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================
    // 1. ALPHA COMMANDER GOD-MODE 
    // =========================================================
    match /{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == 'EOQEt04azKTTWcmNXVtpgSVsRxt2';
    }

    // =========================================================
    // 2. ORDERS & INVOICES
    // =========================================================
    match /orders/{orderId} {
      allow create: if true; 
      allow get: if true; 
      allow list: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // =========================================================
    // 2.5 HR & RECRUITMENT (NEW)
    // =========================================================
    match /job_applications/{appId} {
      allow create: if true; 
    }

    // =========================================================
    // 3. VISAS & PRODUCTS
    // =========================================================
    match /visas/{visaId} {
      allow create, read: if request.auth != null;
    }
    match /products/{productId} {
      allow read: if true; 
    }

    // =========================================================
    // 4. CLIENT & USER RULES
    // =========================================================
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // =========================================================
    // 5. PUBLIC HOMEPAGE PROMOTIONS
    // =========================================================
    match /promotions/{promoId} {
      allow read: if true; 
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    // =========================================================
    // 6. EMPLOYEE LOGISTICS & COMMS
    // =========================================================
    match /employees/{empId} {
      allow read: if request.auth != null;
    }
    match /employee_logs/{logId} {
      allow create: if request.auth != null; 
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
    match /messages/{msgId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.empUid || request.auth.uid == request.resource.data.empUid);
    }
    match /admin_inbox/{inboxId} {
      allow create: if request.auth != null;
    }
  }
}